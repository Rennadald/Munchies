@{
    ViewData["Title"] = "Contact Us";
}

<div class="container py-5">
    <div class="row">
        <div class="col-12 text-center mb-5">
            <h1 class="fw-bold" style="color: var(--munchies-dark-green);">Contact Us</h1>
            <p class="lead">We're here to help! Get in touch with us</p>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-md-6 mb-4">
                            <h5 class="fw-bold" style="color: var(--munchies-dark-green);">Contact Information</h5>
                            <div class="mt-4">
                                <p><i class="fas fa-phone me-2"></i> <strong>Phone:</strong> 055503113</p>
                                <p><i class="fas fa-envelope me-2"></i> <strong>Email:</strong> Munchies@hotmail.com</p>
                                <p><i class="fas fa-clock me-2"></i> <strong>Support Hours:</strong> 8 AM - 8 PM</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h5 class="fw-bold" style="color: var(--munchies-dark-green);">Send us a Message</h5>
                            <form class="mt-3" method="POST" asp-action="Contact">
                                @Html.AntiForgeryToken()
                                <div class="mb-3">
                                    <input type="text" class="form-control" name="Name" placeholder="Your Name" required>
                                </div>
                                <div class="mb-3">
                                    <input type="email" class="form-control" name="Email" placeholder="Your Email" required>
                                </div>
                                <div class="mb-3">
                                    <textarea class="form-control" name="Message" rows="4" placeholder="Your Message" required></textarea>
                                </div>
                                <button type="submit" class="btn w-100" style="background-color: var(--munchies-coral); color: white;">
                                    Send Message
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>