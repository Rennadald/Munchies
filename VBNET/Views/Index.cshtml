@model List<Lunchbox.Models.Rating>
@{
    ViewData["Title"] = "My Reviews";
}

<div class="container-fluid py-4">
    <div class="container">
        <!-- Header -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h1 class="display-6 fw-bold gradient-text mb-2">
                            <i class="fas fa-star me-2"></i>My Reviews
                        </h1>
                        <p class="text-muted">Manage your meal reviews and ratings</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-check-circle me-3 fs-5"></i>
                    <div class="flex-grow-1">
                        <p class="mb-0">@TempData["Success"]</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["Error"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
                <div class="d-flex align-items-center">
                    <i class="fas fa-exclamation-circle me-3 fs-5"></i>
                    <div class="flex-grow-1">
                        <p class="mb-0">@TempData["Error"]</p>
                    </div>
                </div>
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        <!-- Reviews List -->
        <div class="row">
            <div class="col-12">
                @if (Model != null && Model.Count > 0)
                {
                    <div class="card border-0 shadow-sm">
                        <div class="card-header bg-white border-0 py-3">
                            <h5 class="fw-bold mb-0" style="color: var(--munchies-dark-green);">
                                <i class="fas fa-list me-2"></i>All Reviews (@Model.Count)
                            </h5>
                        </div>
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-hover mb-0">
                                    <thead class="bg-light">
                                        <tr>
                                            <th class="border-0">Order & Meal</th>
                                            <th class="border-0 text-center">Rating</th>
                                            <th class="border-0">Review</th>
                                            <th class="border-0 text-center">Date</th>
                                            <th class="border-0 text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var review in Model)
                                        {
                                            <tr>
                                                <td class="border-0">
                                                    <div class="d-flex align-items-start">
                                                        <div class="flex-grow-1">
                                                            <h6 class="fw-bold mb-1" style="color: var(--munchies-dark-green);">
                                                                Order #@review.Order.OrderId
                                                            </h6>
                                                            <p class="text-muted small mb-1">
                                                                <i class="fas fa-child me-1"></i>
                                                                @review.Order.Child.Name
                                                            </p>
                                                            <p class="text-muted small mb-0">
                                                                @{
                                                                    var mealNames = review.Order.OrderItems.Take(2).Select(oi =>
                                                                    oi.Item != null ? oi.Item.Name : (oi.PreMadeMeal != null ? oi.PreMadeMeal.MealName : ""));
                                                                    var displayNames = string.Join(", ", mealNames);
                                                                    var remaining = review.Order.OrderItems.Count - 2;
                                                                }
                                                                @displayNames
                                                                @if (remaining > 0)
                                                                {
                                                                    <text>+@remaining more</text>
                                                                }
                                                            </p>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="border-0 text-center">
                                                    <div class="star-rating-display">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            <i class="fas fa-star @(i <= review.RatingStars ? "text-warning" : "text-light")"></i>
                                                        }
                                                        <div class="mt-1">
                                                            <small class="text-muted">@review.RatingStars/5</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="border-0">
                                                    @if (!string.IsNullOrEmpty(review.Comment))
                                                    {
                                                        <p class="mb-0 review-comment">
                                                            @(review.Comment.Length > 100 ? review.Comment.Substring(0, 100) + "..." : review.Comment)
                                                        </p>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted fst-italic">No comment</span>
                                                    }
                                                </td>
                                                <td class="border-0 text-center">
                                                    <small class="text-muted">
                                                        @review.RatedAt?.ToString("MMM dd, yyyy")<br>
                                                        <small>@review.RatedAt?.ToString("h:mm tt")</small>
                                                    </small>
                                                </td>
                                                <td class="border-0 text-center">
                                                    <div class="btn-group btn-group-sm">
                                                        <a asp-action="Edit" asp-route-id="@review.RatingId"
                                                           class="btn btn-outline-primary"
                                                           data-bs-toggle="tooltip"
                                                           title="Edit Review">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <button type="button"
                                                                class="btn btn-outline-danger"
                                                                data-bs-toggle="modal"
                                                                data-bs-target="#deleteReviewModal@(review.RatingId)"
                                                                title="Delete Review">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </div>
                                                </td>
                                            </tr>

                                            <!-- Delete Confirmation Modal -->
                                            <div class="modal fade" id="deleteReviewModal@(review.RatingId)" tabindex="-1" aria-hidden="true">
                                                <div class="modal-dialog modal-dialog-centered">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title text-danger">
                                                                <i class="fas fa-exclamation-triangle me-2"></i>Delete Review
                                                            </h5>
                                                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                        </div>
                                                        <div class="modal-body">
                                                            <p>Are you sure you want to delete your review for Order #@review.Order.OrderId?</p>
                                                            <div class="alert alert-warning mb-0">
                                                                <small>
                                                                    <i class="fas fa-info-circle me-2"></i>
                                                                    This action cannot be undone. Your rating and comments will be permanently removed.
                                                                </small>
                                                            </div>
                                                        </div>
                                                        <div class="modal-footer">
                                                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                            <form asp-action="Delete" asp-route-id="@review.RatingId" method="POST">
                                                                @Html.AntiForgeryToken()
                                                                <button type="submit" class="btn btn-danger">
                                                                    <i class="fas fa-trash me-2"></i>Delete Review
                                                                </button>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <!-- Empty State -->
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="fas fa-star fa-4x text-muted mb-3"></i>
                            <h4 class="text-muted">No Reviews Yet</h4>
                            <p class="text-muted mb-4">You haven't reviewed any meals yet. Reviews help us improve our service!</p>
                            <a asp-controller="Order" asp-action="History" class="btn btn-signup">
                                <i class="fas fa-shopping-bag me-2"></i>View Order History
                            </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .gradient-text {
            background: linear-gradient(135deg, var(--munchies-dark-green) 0%, var(--munchies-green) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .star-rating-display .fa-star {
            font-size: 1.1rem;
            margin: 0 1px;
        }

        .star-rating-display .text-warning {
            color: #ffc107 !important;
        }

        .star-rating-display .text-light {
            color: #e9ecef !important;
        }

        .review-comment {
            line-height: 1.4;
            color: #495057;
        }

        .btn-signup {
            background: var(--munchies-coral);
            border: none;
            color: white;
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            border-radius: 0.75rem;
            transition: background-color 0.3s;
        }

            .btn-signup:hover {
                background: #e06d48;
                color: white;
            }

        .table tbody tr:hover {
            background-color: rgba(166, 178, 139, 0.05);
        }

        .btn-group-sm .btn {
            padding: 0.25rem 0.5rem;
        }
    </style>
}

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            });
        });
    </script>
}