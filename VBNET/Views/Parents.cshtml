@model IEnumerable<Lunchbox.Models.Parent>
@{
    ViewData["Title"] = "Manage Parents";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="h3 fw-bold mb-2" style="color: var(--munchies-dark-green);">
                        <i class="fas fa-users me-2"></i>Manage Parents
                    </h1>
                    <p class="text-muted mb-0">View and manage parent accounts and their information</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Success/Error Messages -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-check-circle me-3 fs-5"></i>
                <div class="flex-grow-1">
                    <p class="mb-0">@TempData["Success"]</p>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm border-0 mb-4" role="alert">
            <div class="d-flex align-items-center">
                <i class="fas fa-exclamation-circle me-3 fs-5"></i>
                <div class="flex-grow-1">
                    <p class="mb-0">@TempData["Error"]</p>
                </div>
            </div>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Parents Table -->
    <div class="card border-0 shadow-sm p-4">
        <div class="card-header bg-white border-0 py-3">
            <h5 class="fw-bold mb-0" style="color: var(--munchies-dark-green);">
                <i class="fas fa-list me-2"></i>All Parents (@Model.Count())
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="bg-light">
                            <tr>
                                <th class="border-0">Parent Info</th>
                                <th class="border-0">Contact</th>
                                <th class="border-0 text-center">Children</th>
                                <th class="border-0 text-center">Orders</th>
                                <th class="border-0 text-center">Status</th>
                                <th class="border-0 text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var parent in Model)
                            {
                                <tr>
                                    <td class="border-0">
                                        <div class="d-flex align-items-start">
                                            <div class="flex-grow-1">
                                                <h6 class="fw-bold mb-1" style="color: var(--munchies-dark-green);">
                                                    @parent.FirstName @parent.LastName
                                                </h6>
                                                <p class="text-muted small mb-0">
                                                    ID: @parent.ParentId
                                                </p>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="border-0">
                                        <div class="small">
                                            <div class="mb-1">
                                                <i class="fas fa-envelope text-primary me-1"></i>
                                                @parent.Email
                                            </div>
                                            @if (!string.IsNullOrEmpty(parent.PhoneNumber))
                                            {
                                                <div>
                                                    <i class="fas fa-phone text-success me-1"></i>
                                                    @parent.PhoneNumber
                                                </div>
                                            }
                                        </div>
                                    </td>
                                    <td class="border-0 text-center">
                                        <span class="fw-bold text-info">
                                            @parent.Children.Count
                                        </span>
                                        <br>
                                        <small class="text-muted">children</small>
                                    </td>
                                    <td class="border-0 text-center">
                                        <span class="fw-bold text-warning">
                                            @parent.Orders.Count
                                        </span>
                                        <br>
                                        <small class="text-muted">orders</small>
                                    </td>
                                    <td class="border-0 text-center">
                                        <span class="badge bg-success">Active</span>
                                    </td>
                                    <td class="border-0 text-center">
                                        <div class="btn-group btn-group-sm">
                                            <button class="btn btn-outline-primary"
                                                    data-bs-toggle="modal"
                                                    data-bs-target="#viewParentModal"
                                                    data-parent-id="@parent.ParentId"
                                                    onclick="loadParentData(@parent.ParentId)">
                                                <i class="fas fa-eye"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-users fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">No Parents Found</h4>
                    <p class="text-muted mb-4">Start by adding your first parent account!</p>
                    <button class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#addParentModal">
                        <i class="fas fa-plus me-2"></i>Add First Parent
                    </button>
                </div>
            }
        </div>
    </div>
</div>

<!-- View Parent Modal -->
<div class="modal fade" id="viewParentModal" tabindex="-1" aria-labelledby="viewParentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="viewParentModalLabel" style="color: var(--munchies-dark-green);">
                    <i class="fas fa-eye me-2"></i>Parent Details
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div id="parentDetailsContent">
                    <!-- Content will be loaded via JavaScript -->
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function loadParentData(parentId) {
            fetch(`/Admin/Parent/Show/${parentId}`)
                .then(response => response.json())
                .then(data => {
                    const content = `
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">Parent ID</label>
                                    <p class="form-control-plaintext">${data.parentId}</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">User ID</label>
                                    <p class="form-control-plaintext">${data.userId || 'N/A'}</p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">First Name</label>
                                    <p class="form-control-plaintext">${data.firstName}</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">Last Name</label>
                                    <p class="form-control-plaintext">${data.lastName}</p>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">Email</label>
                                    <p class="form-control-plaintext">${data.email}</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">Phone Number</label>
                                    <p class="form-control-plaintext">${data.phoneNumber || 'N/A'}</p>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold">Delivery Address</label>
                            <p class="form-control-plaintext">${data.deliveryAddress || 'N/A'}</p>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">Children Count</label>
                                    <p class="form-control-plaintext">${data.childrenCount || 0}</p>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label class="form-label fw-semibold">Orders Count</label>
                                    <p class="form-control-plaintext">${data.ordersCount || 0}</p>
                                </div>
                            </div>
                        </div>

                        ${data.children && data.children.length > 0 ? `
                            <div class="mb-3">
                                <label class="form-label fw-semibold">Children</label>
                                <div class="list-group">
                                    ${data.children.map(child => `
                                        <div class="list-group-item">
                                            <strong>${child.name}</strong><br>
                                            <small class="text-muted">Date of Birth: ${new Date(child.dateOfBirth).toLocaleDateString()}</small>
                                        </div>
                                    `).join('')}
                                </div>
                            </div>
                        ` : ''}
                    `;

                    document.getElementById('parentDetailsContent').innerHTML = content;
                })
                .catch(error => {
                    console.error('Error loading parent data:', error);
                    document.getElementById('parentDetailsContent').innerHTML = `
                        <div class="alert alert-danger">
                            Error loading parent data. Please try again.
                        </div>
                    `;
                });
        }
    </script>
}