<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Munchies</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
    <link rel="stylesheet" href="~/css/custom.css">
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Navigation Bar -->
    @await Html.PartialAsync("_Navbar")

    <!-- Main Content -->
    @RenderBody()

    <!-- Footer Section -->
    <footer>
        <div class="container">
            <div class="row pt-4">
                <!-- Col 1: Logo -->
                <div class="col-lg-4 col-md-6 mb-4 mb-lg-0 d-flex justify-content-center justify-content-lg-start">
                    <img src="~/images/logo.png" alt="Munchies Logo" class="footer-logo">
                </div>
                <!-- Col 2: Follow Us -->
                <div class="col-lg-2 col-md-6 mb-4 mb-lg-0 text-center text-md-start">
                    <h5 class="footer-heading">Follow Us</h5>
                    <div class="d-flex gap-3 mt-3 justify-content-center justify-content-md-start">
                        <a href="#" class="footer-social-icon"><i class="fab fa-instagram"></i></a>
                        <a href="#" class="footer-social-icon"><i class="fab fa-facebook-f"></i></a>
                        <a href="#" class="footer-social-icon"><i class="fab fa-twitter"></i></a>
                        <a href="#" class="footer-social-icon"><i class="fab fa-tiktok"></i></a>
                    </div>
                </div>
                <!-- Col 3: Legal -->
                <div class="col-lg-3 col-md-6 mb-4 mb-lg-0 text-center text-md-start">
                    <h5 class="footer-heading">Legal</h5>
                    <ul class="list-unstyled">
                        <li class="mb-1"><a href="#" class="footer-link">Terms & Conditions</a></li>
                        <li><a href="#" class="footer-link">Privacy Policy</a></li>
                    </ul>
                </div>
                <!-- Col 4: Contact Us -->
                <div class="col-lg-3 col-md-6 text-center text-md-start">
                    <h5 class="footer-heading">Contact Us</h5>
                    <div class="contact-info justify-content-center justify-content-md-start">
                        <i class="fas fa-phone-alt footer-contact-icon"></i>
                        <span class="footer-contact-text">055503113</span>
                    </div>
                    <div class="contact-info justify-content-center justify-content-md-start">
                        <i class="fas fa-envelope footer-contact-icon"></i>
                        <span class="footer-contact-text">Munchies@hotmail.com</span>
                    </div>
                </div>
            </div>
            <!-- Copyright Row -->
            <div class="row pt-4 mt-3 border-top border-light border-opacity-50">
                <div class="col-12 text-center">
                    <p class="mb-0 footer-contact-text" style="font-size: 0.85rem;">
                        &copy; @DateTime.Now.Year Munchies. All Rights Reserved.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    @await RenderSectionAsync("Modal", required: false)

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>