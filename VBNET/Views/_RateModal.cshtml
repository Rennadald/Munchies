@model Lunchbox.Models.Order

@if (Model.DeliveryStatus == "Delivered")
{
    <div class="modal fade" id="ratingModal@(Model.OrderId)" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title fw-bold" style="color: var(--munchies-dark-green);">
                        Rate Your Order
                    </h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form asp-controller="Order" asp-action="Rate" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="OrderId" value="@Model.OrderId" />

                        <div class="mb-3">
                            <label class="form-label fw-bold">Rating</label>
                            <div class="rating-stars">
                                @for (int i = 5; i >= 1; i--)
                                {
                                    <input type="radio" id="star@(i)_@(Model.OrderId)" name="Rating" value="@i" @(i == 5 ? "checked" : "")>
                                    <label for="star@(i)_@(Model.OrderId)">
                                        <i class="fas fa-star"></i>
                                    </label>
                                }
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Comment (Optional)</label>
                            <textarea name="Comment" class="form-control" rows="3" placeholder="Share your experience..."></textarea>
                        </div>
                        <button type="submit" class="btn btn-order-meal w-100">
                            <i class="fas fa-paper-plane me-2"></i> Submit Review
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<style>
    .rating-stars {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
        gap: 5px;
    }

        .rating-stars input {
            display: none;
        }

        .rating-stars label {
            cursor: pointer;
            font-size: 1.5rem;
            color: #ddd;
            transition: color 0.2s;
        }

            .rating-stars input:checked ~ label,
            .rating-stars label:hover,
            .rating-stars label:hover ~ label {
                color: #ffc107;
            }

        .rating-stars input:checked + label {
            color: #ffc107;
        }
</style>